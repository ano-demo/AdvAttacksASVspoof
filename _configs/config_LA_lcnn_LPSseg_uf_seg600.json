{
    "name": "LA_lcnn_LPSseg_uf_seg600",
    "n_gpu": 1,

    "arch": {
        "type": "lcnn_net",
        "args": {
            "c_s": [32, 48, 64, 32, 32, 80],
            "asoftmax": true,
            "phiflag": true
        }
    },
    "train_data_loader": {
        "type": "SpoofDataLoaderBalanceSample",
        "args":{
            "scp_file": "data_LA/trn_dev_eval_scps/ASVspoof2019_LA_LPS_uf_seg600_train.scp",
            "data_dir": "data_LA/LPS_863",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2
        }
    },
    "dev_data_loader": {
        "type": "SpoofDataLoaderBalanceSample",
        "args":{
            "scp_file": "data_LA/trn_dev_eval_scps/ASVspoof2019_LA_LPS_uf_seg600_dev.scp",
            "data_dir": "data_LA/LPS_863",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "betas": [0.9, 0.999],
            "eps": 1e-9,
            "weight_decay": 1e-3,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "AngleLoss",
        "args": {}
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": null,
    "trainer": {
        "epochs": 100,

        "save_dir": "_saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_accuracy",
        "early_stop": 5,
        
        "tensorboardX": true
    }
}
